@font-face {
  font-family: 'fontawesome';
  src:url('/fonts/fontawesome.eot');
  src:url('/fonts/fontawesome.eot?#iefix') format('embedded-opentype'),
    url('/fonts/fontawesome.woff') format('woff'),
    url('/fonts/fontawesome.ttf') format('truetype'),
    url('/fonts/fontawesome.svg#fontawesome') format('svg');
  font-weight: normal;
  font-style: normal;
}

$mainColor = #2DBCF0

body
html
  height 100%
  padding 0
  margin 0
  background #F4F4F4
  // font-family "Open Sans", Helvetica, Arial, sans-serif
  font-family 'Asap', sans-serif
  font-size 13px
  line-height 20px
  color #3f3f3f

a
  text-decoration none
  color #C0190C

[data-icon]:before
  font-family: 'Pictos Custom'
  content: attr(data-icon)
  -webkit-font-smoothing: antialiased
  vertical-align: middle
  margin-right: 5px
  font-weight: normal
[data-fonticon]:before
  font-family 'fontawesome'
  content attr(data-fonticon)
  speak none
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  margin-right 5px
  vertical-align middle

.flexContainer_new
  display -webkit-flex
  display -moz-flex
  display flex
  &.flexColumn
    -webkit-flex-flow column nowrap
    -moz-flex-flow column nowrap
    flex-flow column nowrap
  .flex
    -webkit-flex 1
    -moz-flex 1
    flex 1
  .scrollable
    overflow-y auto
    width: 100%
    height 100%
    position absolute

.flexContainer
  display -webkit-box
  display -moz-box
  display box
  -webkit-box-orient: horizontal;
  -moz-box-orient: horizontal;
  box-orient: horizontal;
  -webkit-box-align: stretch;
  -moz-box-align: stretch;
  box-align: stretch;
  -webkit-box-direction: normal;
  -moz-box-direction: normal;
  box-direction: normal;
  -webkit-box-pack: justify;
  -moz-box-pack: justify;
  box-pack: justify;
  &.flexColumn
    -webkit-box-orient vertical
    -moz-box-orient vertical
    box-orient vertical
  .flex
    -webkit-box-flex: 1;
    -moz-box-flex: 1;
    box-flex: 1;
    -webkit-box-ordinal-group: 1;
    -moz-box-ordinal-group: 1;
    box-ordinal-group: 1;
  .scrollable
    overflow-y auto
    width: 100%
    height 100%
    position absolute

.inner
  padding 15px

input
  font-family 'Asap', sans-serif
  font-size 13px
  color rgba(#000, 0.5)
  &::-webkit-input-placeholder
    color rgba(#000, 0.15)

.button, button
  background #C0190C
  color #fff
  font-weight bold
  font-family 'Asap', sans-serif
  font-size 13px
  border 0
  padding 15px 20px
  cursor pointer
  &:hover
    background #971109

.message
  padding 5px 10px
  background #F7D52D
  color #fff
  &.error
    background #C0190C
  &.success
    background #5B9F42

