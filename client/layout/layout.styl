#layout
  height 100%
  width 1150px
  margin 0 auto
  .page
    background #fff
    aside
      padding 25px
      width 200px
      border-top 4px solid #C0190C
      h1
        font-weight normal
        font-size 25px
        line-height 35px
      h3
        color rgba(#000, 0.25)
        margin-top 10px
      .steps
        counter-reset: stepCounter
        margin-top 20px
        li
          font-size 14px
          margin-bottom 10px
          color rgba(#000, 0.25)
          position relative
          &:before
            // font-family "Open Sans", Helvetica, Arial, sans-serif
            content: counter(stepCounter)
            counter-increment: stepCounter
            border 2px solid rgba(#000, 0.25)
            font-weight bold
            font-size 16px
            text-align center
            padding-top 5px
            border-radius 50%
            height 35px
            width 35px
            box-sizing border-box
            display inline-block
            margin-right 10px
            padding-left 1px
            vertical-align middle
          &:after
            content ' '
            display block
            height 10px
            border-left 2px solid rgba(#000, 0.1)
            position absolute
            top -10px
            left 17px
          &:first-of-type:after
            display none
          &.done
            color rgba(#000, 0.5)
            &:before
              border-color rgba(#000, 0.5)
              // content 'c'
              // font-family: 'Pictos Custom'
              // font-size 19px
              // padding-top 8px
            &:after
              border-color rgba(#000, 0.35)
          &.active, &.done:hover
            color #E30613
            &:before
              border-color #E30613
              // color #F8D200
              // background #F8D200
              // color #fff
            &:after
              border-color rgba(#000, 0.35)

    .content
      padding 25px
      background #FbFbFb
      box-shadow inset 1px 0 0 #F4F4F4
      // border-left 1px solid rgba(#000, 0.03)
      border-top 4px solid #971109
