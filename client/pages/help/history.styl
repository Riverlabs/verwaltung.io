#helpHistory
  h1
    .currentVersion
      color rgba(#000, 0.5)
      font-size 13px
  h2
    border-bottom 1px solid rgba(#000, 0.1)
    padding-bottom 3px
    margin-bottom 15px
    .date
      color rgba(#000, 0.5)
      font-size 11px
      padding-left 20px
  ul.cards > li
    padding 0 0 10px 0
    .members
      margin-right 10px
      margin-top -5px
      width 30px
      img
        border-radius 50%
    .labels
      display: inline-block
      overflow hidden
      width 110px
      padding-right 10px
      text-align right
      .label
        padding 0px 10px
        border-radius 15px
        font-size 11px
        background #000
        color #fff
        text-align center
        margin-bottom 5px
        height 20px
        box-sizing border-box
        display inline-block
        &.purple
          background #8511c1
        &.green
          background #2da66a
        &.yellow
          background #f9e31c
          color #8f4b19
        &.orange
          background #d78741
        &.red
          background #bd373c
        &.blue
          background #3d60bf
    .title
      font-weight bold
    .description
      color rgba(#000, 0.5)
      p
        padding-top 5px
      ul
        list-style-type circle
        margin-left 20px
        padding-top 5px
        li
          padding 0
    .attachments
      margin-top 10px
      img
        max-width 25%
        padding 2px
        border 1px solid rgba(#000, 0.1)
        box-sizing border-box
