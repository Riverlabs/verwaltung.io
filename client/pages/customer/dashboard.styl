#customerDashboard
  .facts
    .fact
      border-right 1px solid rgba(#000, 0.1)
      text-align center
      padding 0 0 10px
      &:last-of-type
        border-right none
      .value
        font-size 60px
        line-height 70px
      .title
        color rgba(#000, 0.25)
  .team
    .member
      border-right 1px solid rgba(#000, 0.1)
      text-align center
      max-width 200px
      padding 10px
      display block
      .picture
        border-radius 50%
        width 50px
        height 50px
        overflow hidden
        margin 0 auto 10px
        img
          height 100%
          width 100% 
      .name
        font-size 15px
      .role
        color #000
  .bills
    width 100%
    td, th
      padding 10px
    thead th
      background #3f3f3f
      color #fff
      font-weight 600
    .bill
      .date
        color rgba(#000, 0.5)
      .value
        font-weight bold
      .method
        color rgba(#000, 0.5)
      .status
        color #fff
        padding 5px 10px
        &.success
          background green
