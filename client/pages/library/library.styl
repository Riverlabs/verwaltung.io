#library
  .content
    position relative
    h1
      font-weight normal
      font-size 25px
      line-height 35px
      margin-bottom 20px
    table.libraryItems
      width 100%
      th, td
        padding 5px 10px
        word-wrap break-word
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        max-width 100px
      tbody
        tr
          td
            border-bottom 1px solid #eee
            &:first-of-type
              border-left 1px solid #eee
            &:last-of-type
              border-right 1px solid #eee
          &:nth-of-type(odd)
            td
              background #f8f8f8

      thead
        th
          background #3f3f3f
          color #fff
          font-weight 600
      .empty
        opacity 0.5
      .color
        width: 15px
        height 15px
        display inline-block
        margin-right 5px
        vertical-align -3px
      .actions
        width 70px
        text-align right
        a
          margin-left 10px
          margin-right -5px
          &:before
            font-size 20px
